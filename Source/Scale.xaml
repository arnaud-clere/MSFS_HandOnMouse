<UserControl x:Class="HandOnMouse.Source.Scale"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HandOnMouse.Source"
             mc:Ignorable="d" 
             d:DesignHeight="3" d:DesignWidth="200">
<!--
    <Grid x:Name="_scale">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Row="1" Grid.Column="0" Fill="Red"/>
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="LightCyan"/>
        <Rectangle Grid.Row="1" Grid.Column="2" Fill="Gold"/>
    </Grid>
-->
    <StackPanel Orientation="Horizontal">
        <Rectangle x:Name="_neg" Width="{Binding Neg, ElementName=Root, Mode=TwoWay}" Fill="Red"/>
        <Rectangle x:Name="_pos" Width="{Binding Pos, ElementName=Root, Mode=TwoWay}" Fill="LightCyan"/>
        <Rectangle x:Name="_max" Width="{Binding Max, ElementName=Root, Mode=TwoWay}" Fill="Gold"/>
    </StackPanel>
</UserControl>
